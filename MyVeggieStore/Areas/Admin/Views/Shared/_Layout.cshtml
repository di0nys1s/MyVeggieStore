<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-topcancel">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/admin/dashboard/" class="navbar-brand">Dashboard</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/admin/pages">Pages</a></li>
                    <li><a href="/admin/pages/EditSidebar">Sidebar</a></li>
                    <li><a href="/admin/store/categories">Category</a></li>
                    <li><a href="/admin/store/products">Product</a></li>
                    <li><a href="/tblLocations/Create">Add New Store</a></li>
                    <li class="navbar-right"><a href="/account/logout">Logout</a></li>
                </ul>
                <ul class="navbar-right">
                    <li><a href="/" class="navbar-brand" target="">MyVeggieStore</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
